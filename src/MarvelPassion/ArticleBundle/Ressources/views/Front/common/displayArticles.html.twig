{% if articles | length > 0 %}

    <h2 class="profil-title mt-5 ml-4 mr-4 mb-5"> Les articles {{ title }} post√©s par {{ pseudo }} </h2>

    <div class="container-fluid">
        <div class="row">
        {% for article in articles %}
                <div class="col">
                    <div class="card bg-light mb-4">
                        <a href="{{ path(show,{'id': article.id}) }}">
                            <div class="profil-title-card card-hearder pt-3 pb-3 mb-3 text-center">
                                {{ article.title }}
                            </div>
                        </a>
                        
                        <a class="text-center" href="{{ path(show,{'id': article.id}) }}">
                            <img class="img-size img-fluid" src="{{ asset(image) ~ article.image }}" alt="{{ article.title }}">
                        </a>

                        <div class="card-body text-intro">
                            {% if article.introduction is defined %}
                            <p class="card-text text-justify">
                                {{ article.introduction | raw}}
                            </p>
                            {% endif %}
                            <p>
                                <a href="{{ path(show,{'id': article.id}) }}" class="btn btn-form">En savoir plus</a>
                            </p>
                        </div>
                        
                    </div>
                </div>

        {% endfor %}
        </div>
    </div>

{% endif %}