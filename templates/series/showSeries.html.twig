{% extends 'base.html.twig' %}

{% block title %} {{ series.title }} | Marvel-Passion {% endblock %}

{% block body %}

    <article class="mr-4 ml-4">
        <h1 class="title text-center">{{ series.title }}</h1>
        <div class="content-series d-flex flex-column align-items-center">
            <img class="img-fluid col-md-8" src="{{ series.image }}" alt="{{ series.title }}">

            <div class="container-fluid">
                <div class="row">
                    <div class="mr-4 ml-4 mt-5">
                        <h2 class="subtitle">Introduction</h2>
                        <p class="mt-4"> {{ series.introduction | raw }} </p>
                    </div>
                </div>
                
                <div class="row">
                    <div class="content-series-show mt-2 mr-4 ml-4">
                        <h2 class="subtitle mb-4">Informations</h2>   
                        <p>{{ series.content | raw }}</p>
                        <p class="date">Publié le {{ series.creationDate | date('d/m/Y')}} à {{ series.creationDate | date('H:i') }} par {{ series.user.pseudo }}</p>
                    </div>
                </div>

            <p class="border-bottom"></p>            
        </div>

        {% set nbComment = series.comments|length %}

        {% if app.user %}
        <div class="mb-4">
            {{ form_start(formComment) }}

                {{ form_row(formComment.content, {'attr': {'placeholder': 'Votre commentaire'}}) }}

                <button type="submit" class="btn btn-form">Commenter</button>
            
            {{ form_end(formComment) }}
        </div>  
        {% else %}
        <div class="mb-4">
            <p class="connect-to-comment">Vous devez être connecté pour pouvoir commenter</p>
        </div>
        {% endif %}

        {% if nbComment > 0 %}
                {% if series.comments|length == 1 %}
                    <h2 class="mb-4">
                        <i class="fas fa-comment icon-comment"></i> 
                        <span class=" nb-comment"> {{ nbComment }} commentaire : </span>
                    </h2>
                {% else %}
                    <h2 class="mb-4">
                        <i class="fas fa-comments icon-comment"></i> 
                        <span class="nb-comment"> {{ nbComment }} commentaires : </span> 
                    </h2>
                {% endif %}
            {% for comment in series.comments %}
                <div>
                    <div class="mb-2">
                        <a href="{{ path('show_user',{'pseudo': comment.user.pseudo}) }}">
                            <img class="avatar avatar-mini" src=" {{ comment.user.avatar }}" alt="avatar de {{ comment.user.pseudo }}" />
                        </a>
                        <span>
                            <a class="user-comment" href="{{ path('show_user',{'pseudo': comment.user.pseudo}) }}">
                                {{ comment.user.pseudo }}
                            </a>
                            <em class="date-comment"> {{ comment.creationDate|date('d/m/Y') }}  à {{ comment.creationDate | date('H:i') }} </em>
                        </span>
                    </div>
                    <blockquote>
                        {{ comment.content }}
                    </blockquote>
                </div>
                <p class="border-bottom"></p>  
            {% endfor %}
            {% endif %}
    </article>

{% endblock %}