{% extends 'base.html.twig' %}

{% block title %} Humour | Marvel-Passion {% endblock %}

{% block body %}
    <section>
        <h1 class="text-center title">Humour</h1>
        <div class="humor row  d-flex justify-content-center text-center">
            {% for humour in humor %}
            <article class="col-lg-3 col-md-12 content-humor">
                <div>
                    <a class="humor" href="{{ path('show_humor',{'id': humour.id}) }}"><img class="img-humor img-fluid" src="{{ humour.image }}" alt=">{{ humour.title }}"></a>
                </div>
            </article>
            {% endfor %}
        </div>
    </section> 
{% endblock %}
