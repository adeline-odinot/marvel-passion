{% extends 'admin/base.html.twig' %}

{% block title %} Administration - Utilisateurs {% endblock %}

{% block body %}

    <section>
        <h1 class="text-center title mb-4">Gestion des utilisateurs</h1>
        
        <div class="table-responsive">
            <table class="table table-hover">

                <thead class="text-center">
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Avatar</th>
                        <th>Pseudo</th>
                        <th>Email</th>
                        <th>RÃ´le</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>
                <tbody class="text-center">

                    {% for user in paginator.data %}

                        {% set isAdmin = false %}
                        {% set userRole = user.roles %}

                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>
                            <img class="avatar avatar-mini" src="{{ user.avatar }}" alt="Avatar de {{ user.pseudo }}">
                        </td>
                        <td>{{ user.pseudo }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('edit_role',{'id': user.id}) }}">
                                <i class="fas fa-cog">
                                {% for role in userRole %}
                                    {% if role == "ROLE_ADMIN" %}
                                        {% set isAdmin = true %}
                                    {% endif %}
                                {% endfor %}
                                {% if isAdmin == true %}
                                    Administrateur
                                {% else %}
                                    Utilisateur
                                {% endif %}
                                </i>
                            </a>  
                        </td>
                        <td>
                            <a href="{{ path('delete_user',{'id': user.id}) }}">
                                <i class="admin-icon-trash fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    
                    {% endfor %}

                </tbody>

            </table>
        </div>
        
        {{ paginator.display() }}

    </section>

{% endblock %}
