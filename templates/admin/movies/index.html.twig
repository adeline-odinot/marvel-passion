{% extends 'admin/base.html.twig' %}

{% block title %} Administration - Films {% endblock %}

{% block body %}

    <section>
        <h1 class="text-center title mb-4">Gestion des articles de film</h1>

        <div class="table-responsive">
            <table class="table table-hover">

                <thead class="text-center">
                    <tr class="table-admin">
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Date de création</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    {% for movie in paginator.data %}
                    <tr>
                        <td>{{ movie.id }}</td>
                        <td>{{ movie.title }}</td>
                        <td>
                            <img class="avatar avatar-mini" src="{{ movie.user.avatar }}" alt="Avatar de {{ movie.user.pseudo }}">
                            {{ movie.user.pseudo }}
                        </td>
                        <td>{{ movie.creationDate | date('d/m/Y') }} à {{ movie.creationDate | date('H:i') }}</td>
                        <td>
                            <a href="{{ path('edit_movie',{'id': movie.id}) }}">
                                <i class="admin-icon-edit far fa-edit"></i>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('delete_movie',{'id': movie.id}) }}">
                                <i class="admin-icon-trash fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}

                </tbody>
            </table>
        </div>
    
        <a class="btn btn-admin ml-2" href="{{ path('create_movie')}}"><i class="fas fa-plus-circle"></i> Ajouter un article de film</a>
        
        {{ paginator.display() }}

    </section>

{% endblock %}
