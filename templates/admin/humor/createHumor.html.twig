{% extends 'admin/base.html.twig' %}

{% block title %} Administration - Création d'un article d'humour | Marvel Passion {% endblock %}

{% form_theme formHumor 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <section class="d-flex flex-column align-items-center">

        <h1 class="text-center title">Création d'un article d'humour</h1>

        <div class="col-md-8">
            {{ form_start(formHumor) }}

                {{ form_row(formHumor.title, {'attr': {'placeholder': 'Titre du meme d\'humour'}}) }}
                {{ form_row(formHumor.image, {'attr': {'placeholder': 'Url de l\'image d\'humour'}}) }}

                <button type="submit" class="btn btn-form">Ajouter</button>

            {{ form_end(formHumor) }}
            
        </div>
    </section>

{% endblock %}
