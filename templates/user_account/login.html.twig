{% extends 'base.html.twig' %}

{% block title %} Connexion | Marvel-Passion {% endblock %}

{% block body %}

    <section class="d-flex flex-column align-items-center">

        <h1 class="text-center title mb-5">Connexion</h1>
        {% if hasError %}
            <div class="alert alert-danger mt-4 mb-4">
                Adresse e-mail ou mot de passe invalide.
            </div>
        {% endif %}
        <div class="col-md-6">
            <form action="{{ path('account_login') }}" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="_username" id="email"class="form-control" placeholder="Adresse email" required value="{{ email }}">
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password"class="form-control" placeholder="Mot de passe">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-form mt-2">
                        <i class="fas fa-lock-open"></i> 
                        Se connecter
                    </button>
                    <a class="ml-4 btn btn-form mt-2" href="{{ path('account_register') }}">
                        <i class="fas fa-pen-alt"></i>
                        S'inscrire
                    </a>
                </div>
            </form>
        </div>

    </section>

{% endblock %}
