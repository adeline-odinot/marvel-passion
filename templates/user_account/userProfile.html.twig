{% extends 'base.html.twig' %}

{% block title %}Modification du profil{% endblock %}

{% block body %}

<section class="d-flex flex-column align-items-center">

        <h1 class="text-center title">Modification du profil</h1>
        
        <div class="col-md-8">
            {{ form_start(formProfile) }}

                {{ form_row(formProfile.firstName, {'attr': {'placeholder': 'Votre prenom'}}) }}
                {{ form_row(formProfile.lastName, {'attr': {'placeholder': 'Votre nom'}}) }}
                {{ form_row(formProfile.pseudo, {'attr': {'placeholder': 'Votre pseudo'}}) }}
                {{ form_row(formProfile.email, {'attr': {'placeholder': 'Votre adresse e-mail'}}) }}
                {{ form_row(formProfile.avatar, {'attr': {'placeholder': 'Votre image de profil'}}) }}
                {{ form_row(formProfile.description, {'attr': {'placeholder': 'Une description vous refletant'}}) }}

                <button type="submit" class="btn btn-form mt-2">Modifier le profil</button>

            {{ form_end(formProfile) }}
        </div>
    </section>

{% endblock %}