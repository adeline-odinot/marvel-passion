{% extends 'base.html.twig' %}

{% block title %} Inscription | Marvel Passion {% endblock %}

{% form_theme formRegister 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <section class="d-flex flex-column align-items-center">

        <h1 class="text-center title">Inscription</h1>
        
        <div class="col-md-8">
            {{ form_start(formRegister) }}

                {{ form_row(formRegister.firstName, {'attr': {'placeholder': 'Votre prenom'}}) }}
                {{ form_row(formRegister.lastName, {'attr': {'placeholder': 'Votre nom'}}) }}
                {{ form_row(formRegister.pseudo, {'attr': {'placeholder': 'Votre pseudo'}}) }}
                {{ form_row(formRegister.hash, {'attr': {'placeholder': 'Votre mot de passe'}}) }}
                {{ form_row(formRegister.passwordConfirm, {'attr': {'placeholder': 'Veuillez confirmer votre mot de passe'}}) }}
                {{ form_row(formRegister.email, {'attr': {'placeholder': 'Votre adresse e-mail'}}) }}
                {{ form_row(formRegister.avatar, {'attr': {'placeholder': 'Votre image de profil'}}) }}

                <button type="submit" class="btn btn-form mt-2">S'inscrire</button>

            {{ form_end(formRegister) }}
            
        </div>
    </section>

{% endblock %}