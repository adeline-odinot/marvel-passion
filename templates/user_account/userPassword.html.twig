{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe | Marvel-Passion{% endblock %}

{% block body %}

<section class="d-flex flex-column align-items-center">

        <h1 class="text-center title mb-5">Modification du mot de passe</h1>
        
        <div class="col-md-8">
            {{ form_start(formUpdatePassword) }}

                {{ form_row(formUpdatePassword.oldPassword, {'attr': {'placeholder': 'Votre mot de passe actuel'}}) }}

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(formUpdatePassword.newPassword, {'attr': {'placeholder': 'Votre nouveau mot de passe'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(formUpdatePassword.confirmPassword, {'attr': {'placeholder': 'Veuillez confirmer votre nouveau mot de passe'}}) }}
                    </div>
                </div>
    
                <button type="submit" class="btn btn-form mt-2 btn-form-design">Modifier le mot de passe</button>

            {{ form_end(formUpdatePassword) }}
        </div>
    </section>

{% endblock %}